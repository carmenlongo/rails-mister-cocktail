<h1> - <%= @cocktail.name %> - </h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %><strong> <%= dose.ingredient.name %></strong>
      <%= link_to 'x', dose_path(dose),method: :delete %>
    </li>
  <% end %>
</ul>
<h3><%= link_to 'Back to all cocktails', cocktails_path %></h3>
<p><%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %></p>
<%= render "doses/form" %>
